{
  "name": "lite-ui-monorepo",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@9.4.0",
  "description": "A Vue3 based UnoCSS UI library.",
  "author": "AntzyMo <mozbano@163.com>",
  "license": "MIT",
  "homepage": "https://github.com/LiteUI-Space/Lite-ui#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LiteUI-Space/Lite-ui.git"
  },
  "bugs": {
    "url": "https://github.com/LiteUI-Space/Lite-ui/issues"
  },
  "keywords": [
    "vue3",
    "ccomponent",
    "unocss"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build:liteui": "pnpm run -C packages/lite-ui build",
    "stub:theme": "pnpm run -C packages/theme stub",
    "play": "pnpm run -C playground dev",
    "release": "bumpp -r",
    "comp": "esno scripts/create-component.ts",
    "lint:fix": "eslint . --fix",
    "lint:comp:fix": "eslint packages/lite-ui/** packages/theme/** --fix"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "execa": "^9.3.0",
    "fs-extra": "^11.2.0",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@antzy/eslint-config": "^3.3.2",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.1.0",
    "bumpp": "^9.4.1",
    "eslint": "^9.5.0",
    "esno": "^4.7.0",
    "typescript": "^5.2.2"
  }
}
